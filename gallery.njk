<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{{ global.siteTitle }}</title>
        {% include "links.njk" %}
    </head>
    <body class="">
        {% import "headers.njk" as headers %}
        <!-- Header Area wrapper Starts -->
        <header
            id="header-wrap">
            <!-- Navbar Start -->
            <nav class="navbar navbar-expand-lg fixed-top scrolling-navbar gallery-navbar">
                <div
                    class="container">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button
                            class="navbar-toggler"
                            type="button"
                            data-toggle="collapse"
                            data-target="#main-navbar"
                            aria-controls="main-navbar"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                            <span class="icon-menu"></span>
                            <span class="icon-menu"></span>
                            <span class="icon-menu"></span>
                        </button>
                    </div>
                    <div class="collapse navbar-collapse" id="main-navbar">
                        <ul class="navbar-nav mr-auto w-100 justify-content-end">
                            <li class="nav-item active">
                                {% if page.url == '/' %}
                                    <a class="nav-link" href="#header-wrap">
                                        Home
                                    </a>
                                {% else %}
                                    <a class="nav-link" href="/#header-wrap">
                                        Home
                                    </a>
                                {% endif %}
                            </li>
                            {% for key, section in sections %}
                                {% if section.includeInNav %}
                                    <li class="nav-item">
                                        {% if page.url == '/' %}
                                            <a class="nav-link" href="#{{ section.sectionId }}">
                                                {{ section.title }}
                                            </a>
                                        {% else %}
                                            <a class="nav-link" href="/#{{ section.sectionId }}">
                                                {{ section.title }}
                                            </a>
                                        {% endif %}
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <!-- Mobile Menu Start -->
                <ul class="mobile-menu">
                    <li>
                        {% if page.url == '/' %}
                            <a class="page-scrool" href="#header-wrap">Home</a>
                        {% else %}
                            <a class="page-scrool" href="/#header-wrap">Home</a>
                        {% endif %}
                    </li>
                    {% for key, section in sections %}
                        {% if section.includeInNav %}
                            <li>
                                {% if page.url == '/' %}
                                    <a class="page-scrool" href="#{{ section.sectionId }}">
                                        {{ section.title }}
                                    </a>
                                {% else %}
                                    <a class="page-scrool" href="/#{{ section.sectionId }}">
                                        {{ section.title }}
                                    </a>
                                {% endif %}
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
                <!-- Mobile Menu End -->
            </nav>
            <!-- Navbar End -->
        </header>
        
        <!-- Gallery Section Start -->
        <section id="{{ sections.gallery.sectionId }}" class="section-padding">
            {% for year in gallery.sortedYears %}
                {% set galleryImages = gallery.byYear[year] %}
                <div id="{{sections.gallery.sectionId}}-{{year}}" class="container">
                    {{ headers.sectionHeader(sections.gallery.title + " - " + year, global.siteTitle, year, gallery.yearMetadata[year].date ) }}
                    <div class="row">
                        {% for galleryImage in galleryImages %}
                            <div class="col-md-6 col-sm-6 col-lg-4">
                                <div class="gallery-box">
                                    <div class="img-thumb">
                                        <picture>
                                            <img loading="lazy" class="img-fluid" src="{{ galleryImage.src }}" alt="{{ galleryImage.alt }}">
                                        </picture>
                                    </div>
                                    <div class="overlay-box text-center">
                                        <a class="lightbox" href="{{ galleryImage.src }}">
                                            <i class="lni lni-plus"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                {% endfor %}
            </section>
            <!-- Gallery Section End -->
        
        <!-- Footer Start -->
        <footer class="footer-area section-padding">
            <div class="container">
                <div class="row">
                    <div class="col-md-9 col-lg-9 col-sm-9 col-xs-12 wow fadeInUp" data-wow-delay="0.2s">
                        <h3>Legal disclaimer</h3>
                        <p>
                            {{ sections.footer.content }}
                        </p>
                    </div>
                    <div class="col-md-3 col-lg-3 col-sm-3 col-xs-12 wow fadeInUp" data-wow-delay="0.4s">
                        <h3>QUICK LINKS</h3>
                        <ul>
                            <li>
                                {% if page.url == '/' %}
                                    <a href="#header-wrap">Home</a>
                                {% else %}
                                    <a href="/#header-wrap">Home</a>
                                {% endif %}
                            </li>
                            {% for key, section in sections %}
                                {% if section.includeInNav %}
                                    <li>
                                        {% if page.url == '/' %}
                                            <a href="#{{ section.sectionId }}">
                                                {{ section.title }}
                                            </a>
                                        {% else %}
                                            <a href="/#{{ section.sectionId }}">
                                                {{ section.title }}
                                            </a>
                                        {% endif %}
                                    </li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                    <div class="col-md-6 col-lg-3 col-sm-6 col-xs-12 wow fadeInUp" data-wow-delay="0.8s">
                        <div class="widget">
                            <h5 class="widget-title">FOLLOW US ON</h5>
                            <ul class="footer-social">
